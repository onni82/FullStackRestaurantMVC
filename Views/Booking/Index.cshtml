@model IEnumerable<FullStackRestaurantMVC.Models.BookingViewModel>

@{
    ViewData["Title"] = "Bookings";
}

<h2>Bookings</h2>

<p>
    <a asp-action="Create" class="btn btn-success">Create New Booking</a>
</p>

@if (!Model.Any())
{
    <div class="alert alert-info">No bookings found.</div>
}
else
{
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>Customer</th>
                <th>Table</th>
                <th>Start Time</th>
                <th>Guests</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var booking in Model)
            {
                <tr>
                    <td>@booking.CustomerName</td>
                    <td>@booking.TableName</td>
                    <td>@booking.Start.ToString("yyyy-MM-dd HH:mm")</td>
                    <td>@booking.Guests</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@booking.Id" class="btn btn-sm btn-primary">Edit</a>
                        <a asp-action="Delete" asp-route-id="@booking.Id" class="btn btn-sm btn-danger">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
