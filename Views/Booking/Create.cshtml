@model FullStackRestaurantMVC.Models.BookingCreateViewModel

@{
    ViewData["Title"] = "Boka bord";
}

<h1>Boka bord</h1>

@if (ViewBag.Error != null)
{
    <div class="alert alert-danger">@ViewBag.Error</div>
}
@if (ViewBag.Message != null)
{
    <div class="alert alert-success">@ViewBag.Message</div>
}

<form asp-action="Create" method="post">
    <div>
        <label>Namn</label>
        <input asp-for="Name" />
        <span asp-validation-for="Name"></span>
    </div>
    <div>
        <label>Telefon</label>
        <input asp-for="Phone" />
        <span asp-validation-for="Phone"></span>
    </div>
    <div>
        <label>Datum</label>
        <input asp-for="Date" type="date" />
        <span asp-validation-for="Date"></span>
    </div>
    <div>
        <label>Tid</label>
        <input asp-for="Time" type="time" />
        <span asp-validation-for="Time"></span>
    </div>
    <div>
        <label>Antal gäster</label>
        <input asp-for="Guests" type="number" min="1" />
        <span asp-validation-for="Guests"></span>
    </div>
    <button type="submit">Boka</button>
</form>
