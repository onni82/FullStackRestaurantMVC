@model FullStackRestaurantMVC.Models.Booking

@{
    ViewData["Title"] = "Bokningsinformation";
}

<h2>Bokningsinformation</h2>

<dl class="row">
    <dt class="col-sm-2">Starttid</dt>
    <dd class="col-sm-10">@Model.Start</dd>

    <dt class="col-sm-2">Avslutningstid</dt>
    <dd class="col-sm-10">@Model.End</dd>

    <dt class="col-sm-2">Antal gäster</dt>
    <dd class="col-sm-10">@Model.Guests</dd>

    <dt class="col-sm-2">Bord-ID</dt>
    <dd class="col-sm-10">@Model.TableId</dd>

    <dt class="col-sm-2">Kund-ID</dt>
    <dd class="col-sm-10">@Model.CustomerId</dd>
</dl>

<div>
    <a asp-action="Index">Tillbaka till listan</a>
</div>
