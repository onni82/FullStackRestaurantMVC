@model IEnumerable<FullStackRestaurantMVC.Models.ViewModels.BookingWithDetailsVM>

@{
    ViewData["Title"] = "Bookings";
}

<h2>Bookings</h2>

<table class="table">
    <thead>
        <tr>
            <th>Customer</th>
            <th>Phone</th>
            <th>Table</th>
            <th>Guests</th>
            <th>Start</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var b in Model)
        {
            <tr>
                <td>@b.CustomerName</td>
                <td>@b.CustomerPhone</td>
                <td>@b.TableNumber</td>
                <td>@b.Guests</td>
                <td>@b.Start</td>
                <td>
                    <a asp-action="EditBooking" asp-route-id="@b.Id">Edit</a> |
                    <form asp-action="DeleteBooking" asp-route-id="@b.Id" method="post" style="display:inline">
                        <button type="submit" class="btn btn-link">Delete</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
