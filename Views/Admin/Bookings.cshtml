@model IEnumerable<FullStackRestaurantMVC.Models.ViewModels.BookingWithDetailsVM>

@{
    ViewData["Title"] = "Bokningar";
}

<h2>Bokningar</h2>

<p>
    <a asp-action="CreateBooking" class="btn btn-success">+ Skapa ny bokning</a>
</p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Kund</th>
            <th>Telefon</th>
            <th>Bord</th>
            <th>Gäster</th>
            <th>Start</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var b in Model)
        {
            <tr>
                <td>@b.CustomerName</td>
                <td>@b.CustomerPhone</td>
                <td>@b.TableNumber</td>
                <td>@b.Guests</td>
                <td>@b.Start.ToString("yyyy-MM-dd HH:mm")</td>
                <td>
                    <a asp-action="EditBooking" asp-route-id="@b.Id" class="btn btn-primary btn-sm">Redigera</a>
                    <form asp-action="DeleteBooking" asp-route-id="@b.Id" method="post" style="display:inline">
                        <button type="submit" class="btn btn-danger btn-sm"
                                onclick="return confirm('Är du säker på att du vill ta bort denna bokning?');">
                            Ta bort
                        </button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
