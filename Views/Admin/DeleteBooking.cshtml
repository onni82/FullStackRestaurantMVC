@model FullStackRestaurantMVC.Models.ViewModels.BookingWithDetailsVM

@{
    ViewData["Title"] = "Delete Booking";
}

<h2>Delete Booking</h2>

<h4>Are you sure you want to delete this booking?</h4>
<hr />

<dl class="row">
    <dt class="col-sm-2">Start Time</dt>
    <dd class="col-sm-10">@Model.Start</dd>

    <dt class="col-sm-2">Guests</dt>
    <dd class="col-sm-10">@Model.Guests</dd>

    <dt class="col-sm-2">Customer</dt>
    <dd class="col-sm-10">@Model.CustomerName (@Model.CustomerPhone)</dd>

    <dt class="col-sm-2">Table</dt>
    <dd class="col-sm-10">#@Model.TableNumber</dd>
</dl>

<form asp-action="DeleteBooking" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Bookings" class="btn btn-secondary">Cancel</a>
</form>
