@model FullStackRestaurantMVC.Models.ViewModels.BookingWithDetailsVM

@{
    ViewData["Title"] = "Ta bort bokning";
}

<h2>Ta bort bokning</h2>

<h4>Är du säker på att du vill ta bort denna bokning?</h4>
<hr />

<dl class="row">
    <dt class="col-sm-2">Starttid</dt>
    <dd class="col-sm-10">@Model.Start</dd>

    <dt class="col-sm-2">Gäster</dt>
    <dd class="col-sm-10">@Model.Guests</dd>

    <dt class="col-sm-2">Kund</dt>
    <dd class="col-sm-10">@Model.CustomerName (@Model.CustomerPhone)</dd>

    <dt class="col-sm-2">Bord</dt>
    <dd class="col-sm-10">#@Model.TableNumber</dd>
</dl>

<form asp-action="DeleteBooking" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Ta bort</button>
    <a asp-action="Bookings" class="btn btn-secondary">Avbryt</a>
</form>
