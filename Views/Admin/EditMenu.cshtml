@model FullStackRestaurantMVC.Models.ViewModels.MenuItemViewModel

<h2>Edit Menu Item</h2>

<form asp-action="EditMenu" method="post">
    <input type="hidden" asp-for="Id" />
    <partial name="_MenuForm" model="Model" />
    <button type="submit" class="btn btn-primary">Save</button>
    <a asp-action="Menu" class="btn btn-secondary">Cancel</a>
</form>
