@model IEnumerable<FullStackRestaurantMVC.Models.ViewModels.CustomerViewModel>

@{
    ViewData["Title"] = "Kunder";
}

<h2>Kunder</h2>

<p>
    <a asp-action="CreateCustomer" class="btn btn-success">+ Lägg till ny kund</a>
</p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Namn</th>
            <th>Telefonnummer</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var customer in Model)
        {
            <tr>
                <td>@customer.Name</td>
                <td>@customer.PhoneNumber</td>
                <td>
                    <a asp-action="EditCustomer" asp-route-id="@customer.Id" class="btn btn-sm btn-primary">Redigera</a>
                    <form asp-action="DeleteCustomer" asp-route-id="@customer.Id" method="post" style="display:inline">
                        <button type="submit" class="btn btn-sm btn-danger"
                                onclick="return confirm('Är du säker på att du vill ta bort denna kund?');">
                            Ta bort
                        </button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
