@model IEnumerable<FullStackRestaurantMVC.Models.ViewModels.CustomerViewModel>

<h2>Customers</h2>

<p>
    <a asp-action="CreateCustomer" class="btn btn-primary">Add New Customer</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Phone Number</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var customer in Model)
        {
            <tr>
                <td>@customer.Name</td>
                <td>@customer.PhoneNumber</td>
                <td>
                    <a asp-action="EditCustomer" asp-route-id="@customer.Id" class="btn btn-sm btn-warning">Edit</a>
                    <form asp-action="DeleteCustomer" asp-route-id="@customer.Id" method="post" style="display:inline">
                        <button type="submit" class="btn btn-sm btn-danger">Delete</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
