@model FullStackRestaurantMVC.Models.ViewModels.BookingViewModel

@{
    ViewData["Title"] = "Edit Booking";
}

<h2>Edit Booking</h2>

<form asp-action="EditBooking" method="post">
    <input type="hidden" asp-for="Id" />
    <partial name="_BookingForm" model="Model" />

    <button type="submit" class="btn btn-primary">Save</button>
    <a asp-action="Bookings" class="btn btn-secondary">Cancel</a>
</form>
