@model IEnumerable<FullStackRestaurantMVC.Models.ViewModels.TableViewModel>

@{
    ViewData["Title"] = "Bord";
}

<h2>Bord</h2>

<p>
    <a asp-action="CreateTable" class="btn btn-success">+ Lägg till nytt bord</a>
</p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Bordsnummer</th>
            <th>Kapacitet</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var table in Model)
        {
            <tr>
                <td>@table.TableNumber</td>
                <td>@table.Capacity</td>
                <td>
                    <a asp-action="EditTable" asp-route-id="@table.Id" class="btn btn-sm btn-primary">Redigera</a>
                    <form asp-action="DeleteTable" asp-route-id="@table.Id" method="post" style="display:inline">
                        <button type="submit" class="btn btn-sm btn-danger"
                                onclick="return confirm('Är du säker på att du vill ta bort detta bord?');">
                            Ta bort
                        </button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
