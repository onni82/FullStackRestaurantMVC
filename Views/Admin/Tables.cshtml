@model IEnumerable<FullStackRestaurantMVC.Models.Table>

@{
    ViewData["Title"] = "Tables";
}

<h2>Tables</h2>

<a asp-action="CreateTable" class="btn btn-success mb-3">Create Table</a>

<table class="table">
    <thead>
        <tr>
            <th>Table #</th>
            <th>Capacity</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var t in Model)
        {
            <tr>
                <td>@t.TableNumber</td>
                <td>@t.Capacity</td>
                <td>
                    <a asp-action="EditTable" asp-route-id="@t.Id">Edit</a> |
                    <form asp-action="DeleteTable" asp-route-id="@t.Id" method="post" style="display:inline">
                        <button type="submit" class="btn btn-link">Delete</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
