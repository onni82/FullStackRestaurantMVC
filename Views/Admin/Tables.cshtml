@model IEnumerable<FullStackRestaurantMVC.Models.Table>

<h2>Tables</h2>
<a asp-action="CreateTable" class="btn btn-primary">Add Table</a>

<table class="table mt-3">
    <thead>
        <tr>
            <th>Table Number</th>
            <th>Seats</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var t in Model)
        {
            <tr>
                <td>@t.TableNumber</td>
                <td>@t.Seats</td>
                <td>
                    <a asp-action="EditTable" asp-route-id="@t.Id" class="btn btn-sm btn-warning">Edit</a>
                    <form asp-action="DeleteTable" asp-route-id="@t.Id" method="post" style="display:inline">
                        <button type="submit" class="btn btn-sm btn-danger">Delete</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
