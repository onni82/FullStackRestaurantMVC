@model IEnumerable<FullStackRestaurantMVC.Models.ViewModels.TableViewModel>

@{
    ViewData["Title"] = "Tables";
}

<h2>Tables</h2>

<p>
    <a asp-action="CreateTable" class="btn btn-success">+ Add New Table</a>
</p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Table Number</th>
            <th>Capacity</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var table in Model)
        {
            <tr>
                <td>@table.TableNumber</td>
                <td>@table.Capacity</td>
                <td>
                    <a asp-action="EditTable" asp-route-id="@table.Id" class="btn btn-sm btn-primary">Edit</a>
                    <form asp-action="DeleteTable" asp-route-id="@table.Id" method="post" style="display:inline">
                        <button type="submit" class="btn btn-sm btn-danger"
                                onclick="return confirm('Are you sure you want to delete this table?');">
                            Delete
                        </button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
