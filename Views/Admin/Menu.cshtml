@model IEnumerable<FullStackRestaurantMVC.Models.MenuItem>

<h2>Menu Items</h2>
<a asp-action="CreateMenu" class="btn btn-primary">Add Dish</a>

<table class="table mt-3">
    <thead>
        <tr>
            <th>Name</th>
            <th>Description</th>
            <th>Price</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.Description</td>
                <td>@item.Price.ToString("C")</td>
                <td>
                    <a asp-action="EditMenu" asp-route-id="@item.Id" class="btn btn-sm btn-warning">Edit</a>
                    <form asp-action="DeleteMenu" asp-route-id="@item.Id" method="post" style="display:inline">
                        <button type="submit" class="btn btn-sm btn-danger">Delete</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
