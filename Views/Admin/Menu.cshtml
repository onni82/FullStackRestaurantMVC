@model IEnumerable<FullStackRestaurantMVC.Models.MenuItem>

<h2>Meny</h2>
<a asp-action="CreateMenu" class="btn btn-primary">Lägg till rätt</a>

<table class="table mt-3">
    <thead>
        <tr>
            <th>Namn</th>
            <th>Beskrivning</th>
            <th>Pris</th>
            <th>Populär</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.Description</td>
                <td>@item.Price.ToString("C")</td>
                <td>@(item.IsPopular ? "Ja" : "Nej")</td>
                <td>
                    <a asp-action="EditMenu" asp-route-id="@item.Id" class="btn btn-sm btn-warning">Redigera</a>
                    <form asp-action="DeleteMenu" asp-route-id="@item.Id" method="post" style="display:inline">
                        <button type="submit" class="btn btn-sm btn-danger">Ta bort</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
