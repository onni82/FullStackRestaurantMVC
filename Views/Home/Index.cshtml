@model IEnumerable<FullStackRestaurantMVC.Models.MenuItem>
@{
    ViewData["Title"] = "Hem";
}
<div class="text-center mb-5">
    <h1>Välkommen till Kims kök</h1>
    <p>Äkta koreansk mat i hjärtat av Stockholm.</p>
</div>

@if (Model != null && Model.Any())
{
    <h2>Populära rätter</h2>
    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-md-4 mb-3">
                <div class="card h-100">
                    @if (!string.IsNullOrEmpty(item.ImageUrl))
                    {
                        <img src="@item.ImageUrl" class="card-img-top" alt="@item.Name" />
                    }
                    <div class="card-body">
                        <h5 class="card-title">@item.Name</h5>
                        <p class="card-text">@item.Description</p>
                        <p><strong>@item.Price.ToString("C")</strong></p>
                    </div>
                </div>
            </div>
        }
    </div>
}
else
{
    <p>Inga rätter kunde hämtas just nu.</p>
}
